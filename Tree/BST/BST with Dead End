Link: https://www.geeksforgeeks.org/problems/check-whether-bst-contains-dead-end/1

/*The Node structure is
class Node
{
    int data;
    struct Node *left;
    struct Node *right;

    Node(int x){
        data = x;
        left = NULL;
        right = NULL;
    }
};*/

class Solution {
    
    bool BSTContainsDeadEnd(Node* root, int lower, int upper) {
        
        if(!root)
        return 0;
        
        //if LeafNode & if DeadEnd return 1 else return 0;
        if(!root->left && !root->right) {
            if(root->data-lower == 1 && upper-root->data == 1)
            return 1;
            else
            return 0;
        }
        
        return BSTContainsDeadEnd(root->left, lower, root->data) || BSTContainsDeadEnd(root->right, root->data, upper);
        
    }
    
  public:
    bool isDeadEnd(Node *root) {
        // Code here
        //Always check the allowed range for bst node->data
        return BSTContainsDeadEnd(root, 0, INT_MAX);
    }
};

//Edge Case:
// Input: 
// root =
// 8 5 9 2 7 N N 1
// Your Output:
// true
// Expected Output:
// true


