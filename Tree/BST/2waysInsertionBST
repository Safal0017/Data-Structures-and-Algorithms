class Solution {
public:
    TreeNode* insertIntoBST(TreeNode* root, int val) {

        //Recursive way
        // if(!root){
        //     TreeNode *temp = new TreeNode(val);
        //     return temp;
        // }
        // if(val<root->val) {
        //     root->left = insertIntoBST(root->left, val);
        // } else {
        //     root->right = insertIntoBST(root->right, val);
        // }
        // return root;

        //Iterative Way
        if(!root) {
            TreeNode *temp = new TreeNode(val);
            return temp;
        }

        TreeNode *temp = root;

        TreeNode *parent = NULL;
        TreeNode *child = root;
        while(child) {
            parent = child;
            if(val < child->val) 
            child = child->left;
            else
            child = child->right;
        }

        //child is NULL now,
        if(val < parent->val)
        parent->left = new TreeNode(val);
        else 
        parent->right = new TreeNode(val);

        return temp;
    }
};
