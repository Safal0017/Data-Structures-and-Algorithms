LINK:https://leetcode.com/problems/lowest-common-ancestor-of-a-binary-tree/

/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {

    // bool findPath(TreeNode* root, vector<TreeNode*>& path, TreeNode* target) {
    //     if (!root)
    //         return false;
    //     path.push_back(root);
    //     if (root == target)
    //         return true;
    //     if (findPath(root->left, path, target) ||
    //         findPath(root->right, path, target))
    //         return true;
    //     path.pop_back(); // Backtrack if target not found in subtree
    //     return false;
    // }

    bool findPath(TreeNode* root, vector<TreeNode*>& path, TreeNode* node) {
        if (!root)
            return false;
        path.push_back(root);
        if (root == node || findPath(root->left, path, node) ||
            findPath(root->right, path, node))
            return true;
        path.pop_back();
        return false;
    }

public:
    TreeNode* lowestCommonAncestor(TreeNode* root, TreeNode* p, TreeNode* q) {
        if (!root)
            return NULL;

        // root->node path approach
        // Time complexity: O(n), since each path search explores nodes once.
        // Space complexity: O(h), where h is tree height, for storing paths.
        vector<TreeNode*> path1, path2;

        if (!findPath(root, path1, p) || !findPath(root, path2, q))
            return NULL; // either p or q not present in tree

        int i = 0;
        while (i < path1.size() && i < path2.size() && path1[i] == path2[i])
            i++;

        return path1[i - 1]; // last common node before paths diverge
    }
};
